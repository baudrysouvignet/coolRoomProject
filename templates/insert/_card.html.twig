{% macro card(title, date, description, path, image) %}

    <div class="col-xl-3 col-md-6 mb-xl-0 mb-4">
    <div class="card card-blog card-plain">
        <div class="card-header p-0 mt-n4 mx-3">
        <a class="d-block shadow-xl border-radius-xl">
            <img style="width: 100%; height: 170px; object-fit:cover;" src="{{ asset('uploads/images/' ~ image) }}" alt="img-blur-shadow" class="img-fluid shadow border-radius-xl">
        </a>
        </div>
        <div class="card-body p-3">
        <p class="mb-0 text-sm">{{date ? date|date('Y-m-d') : ''}}</p>
        <a href="javascript:;">
            <h5>
                {{title}}
            </h5>
            
        </a>
        <p class="mb-4 text-sm">
            {{description}}
        </p>
        <div class="d-flex align-items-center justify-content-between">
            <a href="" style="width: 100%;"><button type="button" class="btn btn-outline-primary btn-sm mb-0 w-100">Voire le produit</button></a>
        </div>
        </div>
    </div>
    </div>

{% endmacro %}